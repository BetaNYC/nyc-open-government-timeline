<h1> <%= @event.name %> </h1>
<ul>
  <li>Description: <%= @event.description %></li>
  <li>Category: <%= @event.categories.collect{|cat|cat.name}.join(', ') %></li>
  <li>Date: <%= @event.date %></li>
  <li>Event Url: <a href= "<%= @event.url %>"><%= @event.url %></a></li>
  <li><%= link_to 'Edit', edit_event_path(@event) %></li>
  <li><%= link_to 'Destroy', @event, confirm: 'Are you sure?', method: :delete %></li>
</ul>

<h3>Comments</h3>
<table> 
  <tr> 
    <th>Author</th>
    <th>Content</th>
  </tr>
<%  @event.comments.each do |comment| %> 
  <tr>
    <td>
      <%= comment.author %>
    </td>
    <td>
      <%= comment.content %>
    </td>
    <td>
      <%= link_to 'Edit', edit_event_comment_path(@event, comment) %>
    </td>
    <td>
      <%= link_to 'Destroy', event_comment_path(@event, comment), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to 'New Comment', new_event_comment_path(@event) %>
<%= link_to 'Back', events_path %>
