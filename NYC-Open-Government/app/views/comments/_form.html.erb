<%= form_for @event do |event_form| %>
  <%= event_form.fields_for :comment do |comment_fields| %>
    <%= comment_fields.label :author, "Your handle" %>
    <%= comment_fields.text_field :author %>
    <br>
    <%= comment_fields.label :content, "Comment" %>
    <%= comment_fields.text_area :content %>
    <br>
    <%= submit_tag("Post comment") %>
  <% end %>
<% end %>
