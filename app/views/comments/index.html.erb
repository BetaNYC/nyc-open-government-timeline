<h1>Listing comments</h1>

<table>
  <tr>
    <th>Name of Event</th>
    <th>Handle</th>
    <th>Content</th>
  </tr>
  <% @comments.each do |comment| %>
    <tr>
      <td>
        <% @event = Event.find(comment.event_id) %>
        <%= @event.name %>
      </td>
      <td>
        <%= comment.author %>
      </td>
      <td>
        <%= comment.content %>
      </td>
      <td>
        <%= link_to 'Show', event_comment_path(@event, comment) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_event_comment_path(@event, comment) %>
      </td>
      <td>
        <%= link_to 'Destroy', event_comment_path(@event, comment), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Comment', new_event_comment_path(@event) %>